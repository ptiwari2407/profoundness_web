---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSlider from "@/components/sections/HeroSlider.astro";
import BenefitsBanner from "@/components/sections/BenefitsBanner.astro";

const title = "Anxiety Guidance";
const customDescription = "Find peace and calm with expert anxiety guidance. Learn effective strategies to manage anxiety and reclaim your life";
const customOgTitle = "Anxiety Guidance";

// Hero slider images
const heroSlides = [
  {
    id: 1,
    imgSrc: "https://images.unsplash.com/photo-1499209974431-9dddcece7f88?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Find Inner Peace",
    subtitle: "Effective strategies to manage anxiety",
    btnText: "Learn more",
    btnLink: "#services"
  },
  {
    id: 2,
    imgSrc: "https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Anxiety Management",
    subtitle: "Practical tools for daily calm and balance",
    btnText: "Our approach",
    btnLink: "#approach"
  },
  {
    id: 3,
    imgSrc: "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Reclaim Your Life",
    subtitle: "Journey to a more peaceful existence",
    btnText: "Get started",
    btnLink: "/contact"
  }
];
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <!-- Hero Section with Image Slider -->
  <HeroSlider slides={heroSlides} category="ANXIETY GUIDANCE" />
  
  <main class="max-w-6xl mx-auto px-4 py-12">
    <section class="text-center mb-16">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">Anxiety Guidance</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 leading-relaxed">
          Transform your relationship with anxiety through expert guidance and discover a path to inner peace and emotional balance
        </p>
      </div>
    </section>

    <section class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">What You Get</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our comprehensive anxiety guidance program provides you with all the tools and support you need to manage anxiety effectively.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personalized Anxiety Management Plan</h3>
                <p class="text-gray-600 text-sm mt-1">A customized roadmap tailored to your specific anxiety patterns and needs</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Coping Strategies and Techniques</h3>
                <p class="text-gray-600 text-sm mt-1">Practical tools to manage anxiety in the moment and prevent escalation</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Mindfulness Practices</h3>
                <p class="text-gray-600 text-sm mt-1">Evidence-based mindfulness exercises to cultivate calm and present-moment awareness</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Weekly Check-ins and Support</h3>
                <p class="text-gray-600 text-sm mt-1">Consistent guidance and accountability to ensure progress and address challenges</p>
              </div>
            </li>
          </ul>
        </article>

        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Our Approach</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our anxiety guidance program focuses on empowering you to take control of your anxiety. We use evidence-based techniques combined with personalized coaching to help you transform your relationship with anxiety.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Identify Anxiety Triggers and Patterns</h3>
                <p class="text-gray-600 text-sm mt-1">Gain clarity on what activates your anxiety and recognize recurring patterns</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Develop Coping Strategies</h3>
                <p class="text-gray-600 text-sm mt-1">Learn and practice effective techniques to manage anxiety in different situations</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Build Emotional Resilience</h3>
                <p class="text-gray-600 text-sm mt-1">Strengthen your ability to navigate life's challenges with greater ease and confidence</p>
              </div>
            </li>
          </ul>
        </article>
      </div>
    </section>

    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Your Anxiety Management Journey</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">We guide you through a structured process designed to help you understand, manage, and overcome anxiety</p>
      </div>
      
      <div class="relative">
        <!-- Journey Path Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1.5 bg-gradient-to-b from-blue-400 via-indigo-500 to-blue-600 transform -translate-x-1/2 z-0 rounded-full shadow-md"></div>
        
        <div class="space-y-16 relative z-10">
          <!-- Step 1 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-400 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Initial Assessment</h3>
                <p class="text-gray-700 leading-relaxed">
                  We begin with a comprehensive assessment to understand your unique anxiety patterns, triggers, and how anxiety impacts your daily life. This helps us create a clear picture of your specific situation and needs.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">1</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 md:invisible"></div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">2</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 mb-6 md:mb-0">
              <div class="bg-gradient-to-br from-white to-indigo-50 p-6 rounded-xl shadow-lg border-r-4 border-indigo-500 transition-all duration-300 hover:shadow-xl hover:border-r-6 hover:-translate-x-1">
                <h3 class="text-xl font-bold text-indigo-800 mb-3">Personalized Plan</h3>
                <p class="text-gray-700 leading-relaxed">
                  Based on your assessment, we create a tailored anxiety management plan that addresses your specific needs and goals. This includes customized strategies, techniques, and practices designed to help you effectively manage your anxiety.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-500 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Ongoing Support</h3>
                <p class="text-gray-700 leading-relaxed">
                  Your journey includes regular sessions to monitor progress, refine strategies, and provide continuous support. We'll be there every step of the way, helping you navigate challenges and celebrate victories as you build greater emotional resilience.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">3</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Health & Wellbeing Section -->
    <div class="w-screen relative left-1/2 right-1/2 mx-[-50vw] py-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <BenefitsBanner
          title="Benefits of Anxiety Guidance"
          subtitle="Discover how our anxiety management approach can help you find peace and emotional balance"
          benefits={[
            {
              title: "Reduced Anxiety Symptoms",
              description: "Learn effective techniques to manage and reduce the intensity of anxiety symptoms in daily life.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
              iconBgColor: "#4f46e5",
              iconTextColor: "#ffffff"
            },
            {
              title: "Improved Sleep Quality",
              description: "Develop healthy sleep habits and relaxation techniques to combat anxiety-related insomnia.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path></svg>',
              iconBgColor: "#8b5cf6",
              iconTextColor: "#ffffff"
            },
            {
              title: "Better Stress Management",
              description: "Acquire practical tools to manage stress and prevent it from escalating into anxiety.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>',
              iconBgColor: "#10b981",
              iconTextColor: "#ffffff"
            },
            {
              title: "Increased Self-Confidence",
              description: "Build confidence in your ability to handle anxious thoughts and challenging situations.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>',
              iconBgColor: "#f59e0b",
              iconTextColor: "#ffffff"
            },
            {
              title: "Enhanced Focus & Clarity",
              description: "Improve your ability to concentrate and think clearly by reducing anxiety's mental fog.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>',
              iconBgColor: "#ec4899",
              iconTextColor: "#ffffff"
            },
            {
              title: "Healthier Relationships",
              description: "Improve your connections with others by managing anxiety that affects your interactions.",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>',
              iconBgColor: "#6366f1",
              iconTextColor: "#ffffff"
            }
          ]}
          containerClass="pt-0 pb-0"
        />
      </div>
    </div>

    <div class="w-screen relative left-1/2 right-1/2 -mx-[50vw] -mb-4">
      <section class="relative py-20 px-4 overflow-hidden h-[500px] flex items-center">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0">
          <img 
            src="https://images.pexels.com/photos/1122639/pexels-photo-1122639.jpeg?auto=compress&cs=tinysrgb&w=1950&h=1300&dpr=2" 
            alt="A peaceful lake at sunrise with mist rising from the water"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-indigo-900/70 mix-blend-multiply"></div>
        </div>
        
        <!-- Content -->
        <div class="relative max-w-4xl mx-auto text-center px-6 w-full">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
            Ready to Start Your Journey to Inner Peace?
          </h2>
          <div class="w-32 h-1.5 bg-gradient-to-r from-blue-300 via-indigo-300 to-blue-400 mx-auto mb-8 rounded-full shadow-sm"></div>
          
          <p class="text-xl md:text-2xl font-medium text-white/95 mb-10 max-w-2xl mx-auto leading-relaxed drop-shadow-md">
            Take the first step towards managing your anxiety and reclaiming your life. Our certified anxiety specialists are ready to support you on this transformative journey.
          </p>
          
          <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
            <a href="/contact" class="inline-flex items-center px-8 py-4 border-2 border-transparent text-lg font-semibold rounded-md text-blue-900 bg-orange-400 hover:bg-orange-300 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Schedule Consultation
            </a>
            <a href="#services" class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-lg font-medium rounded-md text-white bg-transparent hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Learn More
            </a>
          </div>
          
          <div class="mt-12 flex flex-col md:flex-row justify-center items-center gap-8 text-white/90">
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Certified Specialists</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Personalized Approach</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Ongoing Support</span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>
