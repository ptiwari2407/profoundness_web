---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSlider from "@/components/sections/HeroSlider.astro";

const title = "Spiritual Core Guidance";
const customDescription = "Discover your spiritual path and inner wisdom with expert guidance and support";
const customOgTitle = "Spiritual Core Guidance";

// Hero slider images
const heroSlides = [
  {
    id: 1,
    imgSrc: "https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Spiritual Journey",
    subtitle: "Discover your path to inner wisdom",
    btnText: "Learn more",
    btnLink: "#services"
  },
  {
    id: 2,
    imgSrc: "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Inner Connection",
    subtitle: "Align with your authentic spiritual self",
    btnText: "Our approach",
    btnLink: "#approach"
  },
  {
    id: 3,
    imgSrc: "https://images.unsplash.com/photo-1470770903676-69b98201ea1c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Spiritual Growth",
    subtitle: "Nurture your spiritual development",
    btnText: "Get started",
    btnLink: "/contact"
  }
];
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <!-- Hero Section with Image Slider -->
  <HeroSlider slides={heroSlides} category="SPIRITUAL CORE GUIDANCE" />
  
  <main class="max-w-6xl mx-auto px-4 py-12">
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-6 text-gray-800">Spiritual Core Guidance</h1>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 leading-relaxed">
        Connect with your inner wisdom and discover your spiritual path
      </p>
    </section>

    <section class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Our Approach</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            We help you explore and deepen your spiritual journey through personalized guidance and practices.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Mindfulness Practices</h3>
                <p class="text-gray-600 text-sm mt-1">Learn techniques to cultivate present-moment awareness and inner peace</p>
              </div>
          </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Meditation Guidance</h3>
                <p class="text-gray-600 text-sm mt-1">Personalized meditation practices to deepen your spiritual connection</p>
              </div>
          </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Spiritual Exploration</h3>
                <p class="text-gray-600 text-sm mt-1">Safe space to explore your beliefs, values, and spiritual questions</p>
              </div>
          </li>
        </ul>
      </article>

        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-indigo-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-indigo-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">What We Offer</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our comprehensive spiritual guidance program provides you with the tools and support you need to develop your spiritual practice.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personalized Spiritual Guidance</h3>
                <p class="text-gray-600 text-sm mt-1">One-on-one sessions tailored to your unique spiritual journey</p>
              </div>
          </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Meditation Practices</h3>
                <p class="text-gray-600 text-sm mt-1">Learn various meditation techniques to quiet the mind and connect with your inner self</p>
              </div>
          </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Mindfulness Techniques</h3>
                <p class="text-gray-600 text-sm mt-1">Practical tools to bring awareness and presence into your everyday life</p>
              </div>
          </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personal Growth Support</h3>
                <p class="text-gray-600 text-sm mt-1">Ongoing guidance to help you integrate spiritual practices into your personal development</p>
              </div>
          </li>
        </ul>
      </article>
    </section>

    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Your Spiritual Journey</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">We guide you through a structured process designed to help you discover, develop, and integrate your spiritual practice</p>
      </div>
      
      <div class="relative">
        <!-- Journey Path Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1.5 bg-gradient-to-b from-blue-400 via-indigo-500 to-blue-600 transform -translate-x-1/2 z-0 rounded-full shadow-md"></div>
        
        <div class="space-y-16 relative z-10">
          <!-- Step 1 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-400 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Discovery</h3>
                <p class="text-gray-700 leading-relaxed">
                  Begin your journey by exploring your spiritual beliefs, values, and questions. We create a safe space for you to discover what spirituality means to you personally and what path resonates with your authentic self.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">1</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 md:invisible"></div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">2</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 mb-6 md:mb-0">
              <div class="bg-gradient-to-br from-white to-indigo-50 p-6 rounded-xl shadow-lg border-r-4 border-indigo-500 transition-all duration-300 hover:shadow-xl hover:border-r-6 hover:-translate-x-1">
                <h3 class="text-xl font-bold text-indigo-800 mb-3">Practice</h3>
                <p class="text-gray-700 leading-relaxed">
                  Develop a regular spiritual practice through meditation, mindfulness, and other techniques tailored to your needs. We provide guidance and support as you establish habits that nurture your spiritual growth.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-600 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Integration</h3>
                <p class="text-gray-700 leading-relaxed">
                  Learn to integrate spiritual wisdom into your daily life, relationships, and decisions. This phase focuses on applying your spiritual insights to create a more meaningful, authentic, and purposeful life.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">3</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4 rounded-2xl bg-gradient-to-r from-blue-50 via-indigo-50 to-blue-100 mb-10 border border-blue-100 shadow-lg">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-blue-600 via-indigo-600 to-blue-800 inline-block text-transparent bg-clip-text">Begin Your Spiritual Journey Today</h2>
        <div class="w-32 h-1.5 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-700 mx-auto mb-8 rounded-full shadow-sm"></div>
        
        <p class="text-xl text-gray-700 mb-10 max-w-2xl mx-auto leading-relaxed">
          Take the first step toward deeper spiritual connection and personal growth. Our spiritual guides are ready to support you on this transformative journey.
        </p>
        
        <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-6">
          <a href="/contact" class="inline-block bg-gradient-to-r from-blue-500 via-indigo-600 to-blue-700 text-white font-semibold px-8 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-white/20">
            Schedule Your Consultation
          </a>
          <a href="#services" class="inline-block bg-white text-blue-700 font-semibold px-8 py-4 rounded-lg shadow border-2 border-blue-200 hover:border-blue-300 transition-all duration-300 hover:bg-blue-50">
            Learn More
          </a>
        </div>
        
        <div class="mt-12 flex flex-col md:flex-row justify-center items-center space-y-3 md:space-y-0 md:space-x-8 text-gray-600">
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Certified Spiritual Guides</span>
          </div>
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Personalized Approach</span>
          </div>
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-blue-600 to-blue-800 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Ongoing Support</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
