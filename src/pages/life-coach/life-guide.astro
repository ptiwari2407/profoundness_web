---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSlider from "@/components/sections/HeroSlider.astro";
import BenefitsBanner from "@/components/sections/BenefitsBanner.astro";

const title = "Life Guide";
const customDescription = "Navigate your life's journey with expert guidance. Discover your purpose and create a fulfilling life";
const customOgTitle = "Life Guide";

// Hero slider images
const heroSlides = [
  {
    id: 1,
    imgSrc: "https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Find Your Path",
    subtitle: "Navigate life's journey with expert guidance",
    btnText: "Learn more",
    btnLink: "#services"
  },
  {
    id: 2,
    imgSrc: "https://images.unsplash.com/photo-1499209974431-9dddcece7f88?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Discover Purpose",
    subtitle: "Uncover your true potential and direction",
    btnText: "Our approach",
    btnLink: "#approach"
  },
  {
    id: 3,
    imgSrc: "https://images.unsplash.com/photo-1470770903676-69b98201ea1c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Transform Your Life",
    subtitle: "Create the fulfilling life you deserve",
    btnText: "Get started",
    btnLink: "/contact"
  }
];
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <!-- Hero Section with Image Slider -->
  <HeroSlider slides={heroSlides} category="LIFE GUIDE" />
  
  <main class="max-w-6xl mx-auto px-4 py-12">
    <section class="text-center mb-16">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">Life Guide</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 leading-relaxed">
          Navigate your life's journey with expert guidance to discover your purpose and create a more fulfilling path forward
        </p>
      </div>
    </section>

    <section class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Our Approach</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            We help you create a comprehensive roadmap for your life journey through personalized guidance and proven methodologies.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-yellow-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Life Purpose Discovery</h3>
                <p class="text-gray-600 text-sm mt-1">Uncover your core values, passions, and authentic life direction</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-yellow-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Goal Setting</h3>
                <p class="text-gray-600 text-sm mt-1">Create meaningful, achievable goals aligned with your purpose</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-yellow-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personal Growth Planning</h3>
                <p class="text-gray-600 text-sm mt-1">Develop strategies for continuous self-improvement and fulfillment</p>
              </div>
            </li>
          </ul>
        </article>

        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-indigo-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-indigo-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">What We Offer</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our comprehensive services are designed to support every aspect of your personal growth and life direction.  
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-green-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Life Coaching Sessions</h3>
                <p class="text-gray-600 text-sm mt-1">One-on-one guidance tailored to your unique life circumstances</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-green-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Goal Setting Support</h3>
                <p class="text-gray-600 text-sm mt-1">Structured frameworks to establish and achieve meaningful goals</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-green-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personal Development</h3>
                <p class="text-gray-600 text-sm mt-1">Tools and techniques for continuous self-improvement</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-green-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Life Strategy Planning</h3>
                <p class="text-gray-600 text-sm mt-1">Comprehensive roadmaps for navigating major life transitions</p>
              </div>
            </li>
          </ul>
        </article>
      </div>
    </section>

    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Your Life Journey</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">We guide you through each stage of your personal development journey with expert support tailored to your unique path</p>
      </div>
      
      <div class="relative">
        <!-- Journey Path Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1.5 bg-gradient-to-b from-blue-400 via-indigo-500 to-blue-600 transform -translate-x-1/2 z-0 rounded-full shadow-md"></div>
        
        <div class="space-y-16 relative z-10">
          <!-- Step 1 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-400 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Discovery</h3>
                <p class="text-gray-600 leading-relaxed">
                  Begin by exploring your core values, passions, and authentic self. Through guided reflection and assessment, you'll gain clarity about your life purpose and what truly matters to you.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">1</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 md:invisible"></div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">2</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 mb-6 md:mb-0">
              <div class="bg-gradient-to-br from-white to-indigo-50 p-6 rounded-xl shadow-lg border-r-4 border-indigo-500 transition-all duration-300 hover:shadow-xl hover:border-r-6 hover:-translate-x-1">
                <h3 class="text-xl font-bold text-indigo-800 mb-3">Planning</h3>
                <p class="text-gray-600 leading-relaxed">
                  Transform insights into action with structured goal-setting and strategic planning. We'll help you create a roadmap with clear milestones and practical steps to move toward your vision.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-600 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Growth</h3>
                <p class="text-gray-600 leading-relaxed">
                  Embrace continuous development as you implement your plan. Through ongoing coaching and support, you'll navigate challenges, celebrate victories, and evolve your approach as you progress toward your most fulfilling life.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">3</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits of Life Guidance -->
    <div class="w-screen relative left-1/2 right-1/2 mx-[-50vw] py-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <BenefitsBanner
          title="Transform Your Life Journey"
          subtitle="Discover how our life guidance program can help you find clarity, purpose, and direction"
          benefits={[
            {
              title: "Clarity & Direction",
              description: "Gain clear insights into your life purpose and the path that aligns with your true self",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>',
              iconBgColor: "#4f46e5",
              iconTextColor: "#ffffff"
            },
            {
              title: "Confidence Building",
              description: "Develop unshakable self-confidence in your decisions and life choices",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>',
              iconBgColor: "#10b981",
              iconTextColor: "#ffffff"
            },
            {
              title: "Goal Achievement",
              description: "Turn your dreams into achievable goals with actionable plans and accountability",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>',
              iconBgColor: "#8b5cf6",
              iconTextColor: "#ffffff"
            },
            {
              title: "Life Balance",
              description: "Create harmony between work, relationships, and personal growth",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
              iconBgColor: "#ec4899",
              iconTextColor: "#ffffff"
            },
            {
              title: "Personal Growth",
              description: "Unlock your full potential through continuous self-improvement",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
              iconBgColor: "#f59e0b",
              iconTextColor: "#ffffff"
            },
            {
              title: "Mindset Shift",
              description: "Transform limiting beliefs into empowering perspectives",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>',
              iconBgColor: "#6366f1",
              iconTextColor: "#ffffff"
            }
          ]}
          containerClass="pt-0 pb-0"
        />
      </div>
    </div>

    <section class="py-16 px-4 rounded-2xl bg-gradient-to-r from-blue-50 via-indigo-50 to-blue-100 mb-10 border border-blue-100 shadow-lg">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-blue-600 via-indigo-600 to-blue-800 inline-block text-transparent bg-clip-text">Create Your Personalized Life Map</h2>
        <div class="w-32 h-1.5 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-700 mx-auto mb-8 rounded-full shadow-sm"></div>
        <p class="text-gray-600 text-lg mb-10 max-w-2xl mx-auto leading-relaxed">
          Take the first step toward a more purposeful and fulfilling life. Our expert life guides are ready to help you discover your path and create a roadmap for your future.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/contact" class="inline-block bg-gradient-to-r from-blue-500 via-indigo-600 to-blue-700 text-white font-semibold px-8 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-white/20">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Schedule Consultation
          </a>
          <a href="#services" class="inline-block bg-white text-blue-700 font-semibold px-8 py-4 rounded-lg shadow border-2 border-blue-200 hover:border-blue-300 transition-all duration-300 hover:bg-blue-50">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Learn More
          </a>
        </div>
        <div class="mt-12 flex flex-col md:flex-row justify-center items-center space-y-3 md:space-y-0 md:space-x-8 text-gray-600">
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Certified Life Coaches</span>
          </div>
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Personalized Approach</span>
          </div>
          <div class="flex items-center group">
            <div class="p-1.5 rounded-full bg-gradient-to-br from-blue-600 to-blue-800 mr-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="group-hover:text-blue-700 transition-colors duration-300">Ongoing Support</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
