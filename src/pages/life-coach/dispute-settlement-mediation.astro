---
import MainLayout from "@/layouts/MainLayout.astro";

const title = "Dispute Settlement/Mediation";
const customDescription = "Expert mediation services to resolve disputes and conflicts through constructive dialogue and mutual understanding";
const customOgTitle = "Dispute Settlement/Mediation Services";
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <section class="relative h-[400px] mb-16">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-500 opacity-90"></div>
      <img 
        src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1920&auto=format&fit=crop"
        alt="Mediation session"
        class="absolute inset-0 object-cover w-full h-full"
        loading="eager"
      />
      <div class="relative z-10 text-center px-4 py-20">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Dispute Settlement/Mediation</h1>
        <p class="text-xl text-white/90">
          Expert mediation services to resolve disputes through constructive dialogue and mutual understanding
        </p>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Our Mediation Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="p-6 bg-blue-50 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Community Mediation</h3>
            <p class="text-gray-600 mb-4">
              We help resolve disputes between neighbors, community groups, and local organizations. Our services include:
            </p>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Neighborhood disputes
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Property boundary issues
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Community organization conflicts
              </li>
            </ul>
          </div>

          <div class="p-6 bg-purple-50 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Family Mediation</h3>
            <p class="text-gray-600 mb-4">
              We assist families in resolving conflicts while preserving relationships. Our services include:
            </p>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Divorce and separation
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Parenting plans and custody
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Elder care and inheritance
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-gradient-to-r from-blue-50 to-purple-50 py-16">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Our Mediation Process</h2>
        <div class="space-y-8">
          <div class="p-6 bg-white rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Initial Consultation</h3>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Confidential assessment of the dispute
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Explanation of the mediation process
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Agreement to mediate
              </li>
            </ul>
          </div>

          <div class="p-6 bg-white rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Mediation Sessions</h3>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Structured dialogue facilitation
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Interest-based negotiation
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Creative problem-solving
              </li>
            </ul>
          </div>

          <div class="p-6 bg-white rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Resolution & Implementation</h3>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Written agreement creation
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Implementation planning
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Follow-up support
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Why Choose Our Mediation Services?</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="p-6 bg-blue-50 rounded-lg shadow">
              <h3 class="text-xl font-semibold mb-4">Confidential & Professional</h3>
              <p class="text-gray-600">
                All mediations are conducted in strict confidence with professionally trained mediators
              </p>
            </div>
            <div class="p-6 bg-purple-50 rounded-lg shadow">
              <h3 class="text-xl font-semibold mb-4">Cost-Effective</h3>
              <p class="text-gray-600">
                More affordable than traditional litigation while providing effective conflict resolution
              </p>
            </div>
            <div class="p-6 bg-blue-50 rounded-lg shadow">
              <h3 class="text-xl font-semibold mb-4">Preserves Relationships</h3>
              <p class="text-gray-600">
                Focuses on constructive dialogue and mutual understanding rather than adversarial approaches
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row rounded-xl overflow-hidden">
          <!-- Left side with image and overlay -->
          <div class="w-full md:w-1/2 relative">
            <div class="absolute inset-0 bg-indigo-600 bg-opacity-80 z-10"></div>
            <img 
              src="https://images.unsplash.com/photo-1573497620053-ea5300f94f21?q=80&w=1920&auto=format&fit=crop" 
              alt="Mediation session" 
              class="w-full h-full object-cover absolute inset-0"
            />
            <div class="relative z-20 p-12 h-full flex items-center justify-center">
              <img 
                src="https://images.unsplash.com/photo-1600880292089-90a7e086ee0c?q=80&w=1920&auto=format&fit=crop" 
                alt="People discussing at a table" 
                class="w-full max-w-md rounded-lg shadow-lg"
              />
            </div>
          </div>
          
          <!-- Right side with content -->
          <div class="w-full md:w-1/2 bg-gray-900 p-12 flex items-center">
            <div class="max-w-lg">
              <p class="text-indigo-400 font-medium mb-2">Award-winning mediation support</p>
              <h2 class="text-4xl font-bold text-white mb-6">We're here to help</h2>
              <p class="text-gray-300 mb-8">
                Our expert mediators are ready to guide you through the dispute resolution process with compassion and professionalism. We focus on creating constructive dialogue and finding mutually beneficial solutions that preserve relationships while addressing the core issues at hand.
              </p>
              <a href="/contact" class="inline-block bg-gray-700 text-white px-6 py-3 rounded hover:bg-gray-600 transition-colors">
                Schedule a consultation
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>

