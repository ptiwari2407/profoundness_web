---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSlider from "@/components/sections/HeroSlider.astro";
import BenefitsBanner from "@/components/sections/BenefitsBanner.astro";

const title = "Addiction Coaching";
const customDescription = "Transform your life with expert addiction coaching. Break free from harmful patterns and build a healthier future";
const customOgTitle = "Addiction Coaching";

// Hero slider images
const heroSlides = [
  {
    id: 1,
    imgSrc: "https://images.unsplash.com/photo-1569437061241-a848be43cc82?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Break Free from Addiction",
    subtitle: "Start your journey to recovery and freedom",
    btnText: "Learn more",
    btnLink: "#services"
  },
  {
    id: 2,
    imgSrc: "https://images.unsplash.com/photo-1517048676732-d65bc937f952?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Personalized Support",
    subtitle: "Tailored coaching for your unique situation",
    btnText: "Our approach",
    btnLink: "#approach"
  },
  {
    id: 3,
    imgSrc: "https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Rebuild Your Life",
    subtitle: "Create a healthier, more fulfilling future",
    btnText: "Get started",
    btnLink: "/contact"
  }
];
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <!-- Hero Section with Image Slider -->
  <HeroSlider slides={heroSlides} category="ADDICTION COACHING" />
  
  <main class="max-w-6xl mx-auto px-4 py-12">
    <section class="text-center mb-16">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">Addiction Coaching</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 leading-relaxed">
          Empower yourself to break free from addiction and build a healthier, more fulfilling life
        </p>
      </div>
    </section>

    <section class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Our Approach</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our addiction coaching program is designed to support you through every step of your recovery journey, with a focus on long-term success and holistic well-being.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Holistic Healing</h3>
                <p class="text-gray-600 text-sm mt-1">Addressing the physical, emotional, and spiritual aspects of addiction recovery</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personal Accountability</h3>
                <p class="text-gray-600 text-sm mt-1">Building self-awareness and responsibility as foundations for lasting change</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Sustainable Recovery</h3>
                <p class="text-gray-600 text-sm mt-1">Creating practical strategies and support systems for long-term sobriety</p>
              </div>
            </li>
          </ul>
        </article>

        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-indigo-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-indigo-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">What We Offer</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our comprehensive services are designed to provide you with the tools, support, and guidance needed for successful recovery.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Comprehensive Assessment</h3>
                <p class="text-gray-600 text-sm mt-1">Thorough evaluation of your addiction patterns, triggers, and underlying factors</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Personalized Recovery Plan</h3>
                <p class="text-gray-600 text-sm mt-1">Customized strategies tailored to your unique situation, needs, and goals</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Supportive Counseling</h3>
                <p class="text-gray-600 text-sm mt-1">Regular sessions providing guidance, accountability, and emotional support</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Relapse Prevention</h3>
                <p class="text-gray-600 text-sm mt-1">Practical tools and strategies to identify triggers and maintain sobriety</p>
              </div>
            </li>
          </ul>
        </article>
      </div>
    </section>

    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Your Recovery Journey</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">We guide you through a structured process designed to help you overcome addiction and build a healthier future</p>
      </div>
      
      <div class="relative">
        <!-- Journey Path Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1.5 bg-gradient-to-b from-blue-400 via-indigo-500 to-blue-600 transform -translate-x-1/2 z-0 rounded-full shadow-md"></div>
        
        <div class="space-y-16 relative z-10">
          <!-- Step 1 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-400 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Assessment & Planning</h3>
                <p class="text-gray-700 leading-relaxed">
                  We begin with a comprehensive evaluation of your addiction patterns, triggers, and underlying factors. This allows us to create a personalized recovery plan tailored to your specific needs and goals.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">1</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 md:invisible"></div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">2</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 mb-6 md:mb-0">
              <div class="bg-gradient-to-br from-white to-indigo-50 p-6 rounded-xl shadow-lg border-r-4 border-indigo-500 transition-all duration-300 hover:shadow-xl hover:border-r-6 hover:-translate-x-1">
                <h3 class="text-xl font-bold text-indigo-800 mb-3">Early Recovery</h3>
                <p class="text-gray-700 leading-relaxed">
                  During this critical phase, we focus on building strong foundations for your recovery. You'll develop effective coping strategies, identify triggers, and learn practical tools to manage cravings and challenging situations.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-600 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Long-term Support</h3>
                <p class="text-gray-700 leading-relaxed">
                  Our commitment to your recovery extends beyond the initial phases. We provide ongoing coaching to help you maintain sobriety, prevent relapse, and continue your personal growth journey toward a healthier, more fulfilling life.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">3</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits of Addiction Recovery -->
    <BenefitsBanner
      title="The Benefits of Addiction Recovery"
      subtitle="Experience profound transformation and reclaim your life with our comprehensive addiction recovery program"
      benefits={[
        {
          title: "Sobriety & Clarity",
          description: "Regain mental clarity and physical health as you break free from addiction's grip",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
          iconBgColor: "#4f46e5",
          iconTextColor: "#ffffff"
        },
        {
          title: "Emotional Healing",
          description: "Address underlying emotional wounds and develop healthy coping mechanisms",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>',
          iconBgColor: "#ec4899",
          iconTextColor: "#ffffff"
        },
        {
          title: "Stronger Relationships",
          description: "Rebuild trust and create healthier connections with loved ones",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>',
          iconBgColor: "#10b981",
          iconTextColor: "#ffffff"
        },
        {
          title: "Personal Growth",
          description: "Discover your true potential and develop a stronger sense of self",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
          iconBgColor: "#d97706",
          iconTextColor: "#ffffff"
        },
        {
          title: "Life Skills",
          description: "Develop essential skills for managing stress, emotions, and daily challenges",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>',
          iconBgColor: "#8b5cf6",
          iconTextColor: "#ffffff"
        },
        {
          title: "Renewed Purpose",
          description: "Rediscover meaning and direction in life beyond addiction",
          icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
          iconBgColor: "#319795",
          iconTextColor: "#ffffff"
        }
      ]}
      containerClass="pt-10 pb-[1.125rem] bg-white dark:bg-gray-900"
    />

    <div class="w-screen relative left-1/2 right-1/2 -mx-[50vw] -mb-4">
      <section class="relative py-20 px-4 overflow-hidden h-[500px] flex items-center">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0">
          <img 
            src="https://images.pexels.com/photos/4503273/pexels-photo-4503273.jpeg?auto=compress&cs=tinysrgb&w=1950&h=1300&dpr=2" 
            alt="A peaceful forest path with sunlight streaming through the trees"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-indigo-900/70 mix-blend-multiply"></div>
        </div>
        
        <!-- Content -->
        <div class="relative max-w-4xl mx-auto text-center px-6 w-full">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
            Ready to Break Free from Addiction?
          </h2>
          <div class="w-32 h-1.5 bg-gradient-to-r from-blue-300 via-indigo-300 to-blue-400 mx-auto mb-8 rounded-full shadow-sm"></div>
          
          <p class="text-xl md:text-2xl font-medium text-white/95 mb-10 max-w-2xl mx-auto leading-relaxed drop-shadow-md">
            Take the first step towards a healthier, more fulfilling life. Our experienced addiction coaches are ready to support you on your recovery journey.
          </p>
          
          <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
            <a href="/contact" class="inline-flex items-center px-8 py-4 border-2 border-transparent text-lg font-semibold rounded-md text-blue-900 bg-orange-400 hover:bg-orange-300 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Schedule Consultation
            </a>
            <a href="#services" class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-lg font-medium rounded-md text-white bg-transparent hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Learn More
            </a>
          </div>
          
          <div class="mt-12 flex flex-col md:flex-row justify-center items-center gap-8 text-white/90">
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Certified Specialists</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Personalized Approach</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Ongoing Support</span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>
