---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSlider from "@/components/sections/HeroSlider.astro";
import BenefitsBanner from "@/components/sections/BenefitsBanner.astro";

const title = "Grief Coaching";
const customDescription = "Find healing and support through your grief journey with compassionate and expert guidance";
const customOgTitle = "Grief Coaching";

// Hero slider images
const heroSlides = [
  {
    id: 1,
    imgSrc: "https://images.unsplash.com/photo-1499209974431-9dddcece7f88?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Healing Through Grief",
    subtitle: "Compassionate support for your journey",
    btnText: "Learn more",
    btnLink: "#services"
  },
  {
    id: 2,
    imgSrc: "https://images.unsplash.com/photo-1469571486292-b53926c9bf6c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Finding Peace",
    subtitle: "Navigate loss with expert guidance",
    btnText: "Our approach",
    btnLink: "#approach"
  },
  {
    id: 3,
    imgSrc: "https://images.unsplash.com/photo-1499209974431-9dddcece7f88?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80",
    title: "Moving Forward",
    subtitle: "Rebuild your life after loss",
    btnText: "Get started",
    btnLink: "/contact"
  }
];
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <!-- Hero Section with Image Slider -->
  <HeroSlider slides={heroSlides} category="GRIEF COACHING" />
  
  <main class="max-w-6xl mx-auto px-4 py-12">
    <section class="text-center mb-16">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">Grief Coaching</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 leading-relaxed">
          Navigate your grief journey with compassionate support and expert guidance to find healing and peace
        </p>
      </div>
    </section>

    <section class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-blue-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Our Approach</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            We provide a safe, supportive space for you to process your grief and find meaning in your loss. Our compassionate approach helps you navigate this difficult journey.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Compassionate Listening</h3>
                <p class="text-gray-600 text-sm mt-1">Creating a safe space for you to express your feelings without judgment</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Emotional Support</h3>
                <p class="text-gray-600 text-sm mt-1">Providing guidance and understanding through the complex emotions of grief</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-blue-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Healing Strategies</h3>
                <p class="text-gray-600 text-sm mt-1">Evidence-based techniques to help you process grief and move toward healing</p>
              </div>
            </li>
          </ul>
        </article>

        <article class="p-8 bg-white rounded-xl shadow-lg border-t-4 border-indigo-500 transition-transform hover:translate-y-[-5px]">
          <div class="flex items-center mb-6">
            <div class="bg-indigo-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">What We Offer</h2>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Our comprehensive grief support services are designed to meet you where you are and guide you toward healing and renewed purpose.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Compassionate Support</h3>
                <p class="text-gray-600 text-sm mt-1">Empathetic guidance from experienced grief coaches who understand your journey</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Grief Processing Techniques</h3>
                <p class="text-gray-600 text-sm mt-1">Specialized methods to help you work through complex emotions and memories</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Coping Strategies</h3>
                <p class="text-gray-600 text-sm mt-1">Practical tools for managing grief in daily life and during difficult moments</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 bg-indigo-50 p-1 rounded-full mt-1">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </span>
              <div class="ml-3">
                <h3 class="font-semibold text-gray-800">Healing Journey Guidance</h3>
                <p class="text-gray-600 text-sm mt-1">Support in finding meaning, purpose, and a path forward after loss</p>
              </div>
            </li>
          </ul>
        </article>
      </div>
    </section>

    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Your Grief Healing Journey</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">We guide you through a compassionate process designed to help you navigate grief and find healing</p>
      </div>
      
      <div class="relative">
        <!-- Journey Path Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1.5 bg-gradient-to-b from-blue-400 via-indigo-500 to-blue-600 transform -translate-x-1/2 z-0 rounded-full shadow-md"></div>
        
        <div class="space-y-16 relative z-10">
          <!-- Step 1 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-400 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Initial Connection</h3>
                <p class="text-gray-700 leading-relaxed">
                  We begin by creating a safe, trusting space where you can share your grief experience. This initial phase focuses on understanding your unique loss and building a foundation for healing.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">1</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 md:invisible"></div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">2</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 mb-6 md:mb-0">
              <div class="bg-gradient-to-br from-white to-indigo-50 p-6 rounded-xl shadow-lg border-r-4 border-indigo-500 transition-all duration-300 hover:shadow-xl hover:border-r-6 hover:-translate-x-1">
                <h3 class="text-xl font-bold text-indigo-800 mb-3">Processing & Healing</h3>
                <p class="text-gray-700 leading-relaxed">
                  During this important phase, we work through the complex emotions of grief. Using specialized techniques, we help you process your feelings, find meaning in your loss, and begin the healing process.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="md:flex items-center">
            <div class="md:w-1/2 md:pr-12 mb-6 md:mb-0 md:text-right">
              <div class="bg-gradient-to-br from-white to-blue-50 p-6 rounded-xl shadow-lg border-l-4 border-blue-600 transition-all duration-300 hover:shadow-xl hover:border-l-6 hover:translate-x-1">
                <h3 class="text-xl font-bold text-blue-800 mb-3">Moving Forward</h3>
                <p class="text-gray-700 leading-relaxed">
                  As you progress in your healing journey, we support you in integrating your loss into your life story. This phase focuses on rebuilding, finding new purpose, and moving forward while honoring your loved one's memory.
                </p>
              </div>
            </div>
            <div class="hidden md:flex justify-center items-center md:w-16">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 flex items-center justify-center shadow-lg z-20 border-2 border-white">
                <span class="text-white font-bold text-lg">3</span>
              </div>
            </div>
            <div class="md:w-1/2 md:pl-12 md:invisible"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits of Grief Coaching -->
    <div class="w-screen relative left-1/2 right-1/2 mx-[-50vw] py-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <BenefitsBanner
          title="Find Healing and Hope"
          subtitle="Discover how our grief coaching can support you through your healing journey"
          benefits={[
            {
              title: "Emotional Support",
              description: "Receive compassionate guidance as you navigate the complex emotions of grief",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>',
              iconBgColor: "#4f46e5",
              iconTextColor: "#ffffff"
            },
            {
              title: "Coping Strategies",
              description: "Learn healthy ways to manage grief and find moments of peace",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
              iconBgColor: "#10b981",
              iconTextColor: "#ffffff"
            },
            {
              title: "Personalized Guidance",
              description: "Get tailored support that honors your unique grief experience",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>',
              iconBgColor: "#8b5cf6",
              iconTextColor: "#ffffff"
            },
            {
              title: "Healing Process",
              description: "Move through grief at your own pace with professional support",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
              iconBgColor: "#ec4899",
              iconTextColor: "#ffffff"
            },
            {
              title: "Memory Integration",
              description: "Find meaningful ways to honor and remember your loved one",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>',
              iconBgColor: "#f59e0b",
              iconTextColor: "#ffffff"
            },
            {
              title: "Renewed Hope",
              description: "Discover a path forward while cherishing the love and memories you hold",
              icon: '<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>',
              iconBgColor: "#6366f1",
              iconTextColor: "#ffffff"
            }
          ]}
          containerClass="pt-0 pb-0"
        />
      </div>
    </div>

    <div class="w-screen relative left-1/2 right-1/2 -mx-[50vw] -mb-4">
      <section class="relative py-20 px-4 overflow-hidden h-[500px] flex items-center">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0">
          <img 
            src="https://images.pexels.com/photos/2387532/pexels-photo-2387532.jpeg?auto=compress&cs=tinysrgb&w=1950&h=1300&dpr=2" 
            alt="A peaceful sunset over a calm lake with mountains in the distance"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-indigo-900/70 mix-blend-multiply"></div>
        </div>
        
        <!-- Content -->
        <div class="relative max-w-4xl mx-auto text-center px-6 w-full">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
            Ready to Begin Your Healing Journey?
          </h2>
          <div class="w-32 h-1.5 bg-gradient-to-r from-blue-300 via-indigo-300 to-blue-400 mx-auto mb-8 rounded-full shadow-sm"></div>
          
          <p class="text-xl md:text-2xl font-medium text-white/95 mb-10 max-w-2xl mx-auto leading-relaxed drop-shadow-md">
            Take the first step towards healing and finding peace. Our compassionate grief coaches are here to support you through this difficult time.
          </p>
          
          <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
            <a href="/contact" class="inline-flex items-center px-8 py-4 border-2 border-transparent text-lg font-semibold rounded-md text-blue-900 bg-orange-400 hover:bg-orange-300 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Schedule Consultation
            </a>
            <a href="#services" class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-lg font-medium rounded-md text-white bg-transparent hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Learn More
            </a>
          </div>
          
          <div class="mt-12 flex flex-col md:flex-row justify-center items-center gap-8 text-white/90">
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Certified Specialists</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Compassionate Approach</span>
            </div>
            <div class="flex items-center group">
              <div class="p-1.5 rounded-full bg-white/20 mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="group-hover:text-orange-300 transition-colors duration-300">Personalized Support</span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>
