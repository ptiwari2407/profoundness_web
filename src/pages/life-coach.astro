---
import MainLayout from "@/layouts/MainLayout.astro";
import { servicesData, profoundnessFactorData } from "@/data_files/nav/en/life_coach_link.ts";

const title = "Life Coach Services";
const customDescription = "Discover our comprehensive life coaching services for personal growth and transformation";
const customOgTitle = "Life Coach Services";
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold mb-4">Life Coach Services</h1>
      <p class="text-xl text-gray-600">
        Transform your life with our comprehensive coaching services designed to support you through every aspect of personal growth
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {servicesData.map((service) => (
        <article class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
          <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full mb-4">
            <span class="text-blue-600 text-xl">{service.icon}</span>
          </div>
          <h2 class="text-2xl font-semibold mb-4">{service.title}</h2>
          <p class="text-gray-600 mb-4">{service.description}</p>
          <a href={service.url} class="inline-block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors">
            Learn More
          </a>
        </article>
      ))}
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">Profoundness Factor</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {profoundnessFactorData.map((item) => (
          <article class="p-6 bg-white rounded-lg shadow">
            <img 
              src={item.image} 
              alt={item.alt} 
              class="w-full rounded-lg mb-4"
              loading="lazy"
            />
            <h3 class="text-xl font-semibold mb-4">{item.alt}</h3>
            <p class="text-gray-600 mb-4">{item.description}</p>
            <a href="/profoundness/factor" class="inline-block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors">
              Learn More
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="text-center">
      <h2 class="text-3xl font-bold mb-8">Ready to Transform Your Life?</h2>
      <p class="text-gray-600 mb-8">
        Schedule a consultation with one of our experienced life coaches today
      </p>
      <a href="/contact" class="inline-block bg-blue-500 text-white px-8 py-4 rounded-lg hover:bg-blue-600 transition-colors">
        Schedule Consultation
      </a>
    </section>
  </main>
</MainLayout>
