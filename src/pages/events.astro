---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="py-12 bg-white dark:bg-neutral-900">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-8 text-center">Upcoming Events</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Event Card 1 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Mindfulness Workshop</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Learn mindfulness techniques for daily life</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">May 30, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 2 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Creative Writing Session</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Enhance your creative writing skills</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">June 5, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 3 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Spiritual Retreat</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">A weekend of meditation and self-discovery</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">June 15-17, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
