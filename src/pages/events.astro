---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="relative py-16 bg-gradient-to-br from-yellow-50 via-white to-orange-50 dark:from-neutral-900 dark:via-neutral-900 dark:to-yellow-950 min-h-screen">
    <div class="container mx-auto px-4">
      <div class="mb-12 text-center">
        <h1 class="text-5xl font-extrabold tracking-tight text-[#2d3a2d] dark:text-yellow-400 mb-2 drop-shadow-lg">Upcoming Events</h1>
        <p class="max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300 font-medium">Join our vibrant community for workshops, retreats, talks, and more. Discover your next profound experience.</p>
      </div>

      <!-- Alpine.js for filtering -->
      <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
      <div x-data="{
        categories: ['All', 'Workshops', 'Retreats', 'Talks', 'Community'],
        activeCategory: 'All',
        setCategory(cat) { this.activeCategory = cat; }
      }" class="mb-12 flex flex-wrap justify-center gap-3">
        <template x-for="cat in categories" :key="cat">
          <button
            @click="setCategory(cat)"
            :class="activeCategory === cat ? 'bg-yellow-500 text-white shadow-lg scale-105' : 'bg-white dark:bg-neutral-800 text-[#f25939] dark:text-yellow-400 border border-yellow-400 hover:bg-yellow-100 dark:hover:bg-neutral-700'"
            class="px-5 py-2 rounded-full font-bold text-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-400 shadow-sm"
            x-text="cat"
          ></button>
        </template>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <!-- Event Card 1 -->
        <div class="bg-white dark:bg-neutral-800 rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-200 border border-yellow-100 dark:border-neutral-700 group"
          x-show="activeCategory === 'All' || activeCategory === 'Workshops'">
          <div class="h-48 w-full bg-gradient-to-br from-yellow-200 to-orange-100 dark:from-yellow-900 dark:to-yellow-800 flex items-center justify-center">
            <img src="/images/event_mindfulness.png" alt="Mindfulness Workshop" class="object-cover h-full w-full group-hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
          <div class="p-7">
            <h2 class="text-2xl font-extrabold mb-2 text-[#f25939] dark:text-yellow-400">Mindfulness Workshop</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Learn mindfulness techniques for daily life</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-600 dark:text-yellow-300 font-semibold">May 30, 2025</span>
              <button class="bg-yellow-500 text-white px-5 py-2 rounded-full font-bold shadow hover:bg-yellow-600 transition-colors">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 2 -->
        <div class="bg-white dark:bg-neutral-800 rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-200 border border-yellow-100 dark:border-neutral-700 group"
          x-show="activeCategory === 'All' || activeCategory === 'Talks'">
          <div class="h-48 w-full bg-gradient-to-br from-yellow-100 to-orange-100 dark:from-yellow-900 dark:to-yellow-800 flex items-center justify-center">
            <img src="/images/event_writing.png" alt="Creative Writing Session" class="object-cover h-full w-full group-hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
          <div class="p-7">
            <h2 class="text-2xl font-extrabold mb-2 text-[#f25939] dark:text-yellow-400">Creative Writing Session</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Enhance your creative writing skills</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-600 dark:text-yellow-300 font-semibold">June 5, 2025</span>
              <button class="bg-yellow-500 text-white px-5 py-2 rounded-full font-bold shadow hover:bg-yellow-600 transition-colors">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 3 -->
        <div class="bg-white dark:bg-neutral-800 rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-200 border border-yellow-100 dark:border-neutral-700 group"
          x-show="activeCategory === 'All' || activeCategory === 'Retreats'">
          <div class="h-48 w-full bg-gradient-to-br from-yellow-100 to-orange-200 dark:from-yellow-900 dark:to-yellow-800 flex items-center justify-center">
            <img src="/images/event_retreat.png" alt="Spiritual Retreat" class="object-cover h-full w-full group-hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
          <div class="p-7">
            <h2 class="text-2xl font-extrabold mb-2 text-[#f25939] dark:text-yellow-400">Spiritual Retreat</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">A weekend of meditation and self-discovery</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-600 dark:text-yellow-300 font-semibold">June 15-17, 2025</span>
              <button class="bg-yellow-500 text-white px-5 py-2 rounded-full font-bold shadow hover:bg-yellow-600 transition-colors">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 4 (Community) -->
        <div class="bg-white dark:bg-neutral-800 rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-200 border border-yellow-100 dark:border-neutral-700 group"
          x-show="activeCategory === 'All' || activeCategory === 'Community'">
          <div class="h-48 w-full bg-gradient-to-br from-yellow-100 to-orange-200 dark:from-yellow-900 dark:to-yellow-800 flex items-center justify-center">
            <img src="/images/event_community.png" alt="Community Gathering" class="object-cover h-full w-full group-hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
          <div class="p-7">
            <h2 class="text-2xl font-extrabold mb-2 text-[#f25939] dark:text-yellow-400">Community Gathering</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Connect with like-minded individuals in a casual setting</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-600 dark:text-yellow-300 font-semibold">June 22, 2025</span>
              <button class="bg-yellow-500 text-white px-5 py-2 rounded-full font-bold shadow hover:bg-yellow-600 transition-colors">Register</button>
            </div>
          </div>
        </div>
>

        <!-- Event Card 1 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Mindfulness Workshop</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Learn mindfulness techniques for daily life</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">May 30, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 2 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Creative Writing Session</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Enhance your creative writing skills</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">June 5, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>

        <!-- Event Card 3 -->
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">Spiritual Retreat</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">A weekend of meditation and self-discovery</p>
            <div class="flex justify-between items-center">
              <span class="text-yellow-500">June 15-17, 2025</span>
              <button class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Register</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
