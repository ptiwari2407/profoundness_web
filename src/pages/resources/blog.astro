---
import MainLayout from "@/layouts/MainLayout.astro";

const title = "Blog";
const customDescription = "Explore our collection of articles on personal growth, spirituality, and life transformation";
const customOgTitle = "Blog";
---

<MainLayout title={title} customDescription={customDescription} customOgTitle={customOgTitle}>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-gray-600">
        Insights and wisdom for your personal growth journey
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <article class="p-6 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
        <img 
          src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop"
          alt="Mindfulness in Daily Life"
          class="w-full h-48 object-cover rounded-lg mb-4"
          loading="lazy"
        />
        <h2 class="text-2xl font-semibold mb-4">Mindfulness in Daily Life</h2>
        <p class="text-gray-600 mb-4">
          Learn how to incorporate mindfulness practices into your everyday routine
        </p>
        <a href="/blog/mindfulness-in-daily-life" class="inline-block bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors">Read More</a>
      </article>

      <article class="p-6 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
        <img 
          src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop"
          alt="Overcoming Anxiety"
          class="w-full h-48 object-cover rounded-lg mb-4"
          loading="lazy"
        />
        <h2 class="text-2xl font-semibold mb-4">Overcoming Anxiety</h2>
        <p class="text-gray-600 mb-4">
          Practical strategies for managing and reducing anxiety
        </p>
        <a href="/blog/overcoming-anxiety" class="inline-block bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors">Read More</a>
      </article>

      <article class="p-6 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
        <img 
          src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop"
          alt="Spiritual Practices"
          class="w-full h-48 object-cover rounded-lg mb-4"
          loading="lazy"
        />
        <h2 class="text-2xl font-semibold mb-4">Spiritual Practices</h2>
        <p class="text-gray-600 mb-4">
          Exploring various spiritual practices for personal growth
        </p>
        <a href="/blog/spiritual-practices" class="inline-block bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors">Read More</a>
      </article>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">Categories</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/blog/category/personal-growth" class="p-4 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2">Personal Growth</h3>
          <p class="text-gray-600">Articles on self-improvement and development</p>
        </a>
        <a href="/blog/category/spirituality" class="p-4 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2">Spirituality</h3>
          <p class="text-gray-600">Exploring spiritual concepts and practices</p>
        </a>
        <a href="/blog/category/mental-health" class="p-4 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2">Mental Health</h3>
          <p class="text-gray-600">Guides for mental well-being</p>
        </a>
        <a href="/blog/category/life-coaching" class="p-4 bg-yellow-50/60 rounded-lg shadow hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2">Life Coaching</h3>
          <p class="text-gray-600">Insights from coaching practices</p>
        </a>
      </div>
    </section>

    <section class="text-center">
      <h2 class="text-3xl font-bold mb-8">Subscribe to Our Newsletter</h2>
      <p class="text-gray-600 mb-8">
        Get the latest articles and insights delivered to your inbox
      </p>
      <form class="max-w-md mx-auto">
        <div class="flex space-x-4">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <button 
            type="submit" 
            class="bg-yellow-500 text-white px-6 py-3 rounded-lg hover:bg-yellow-600 transition-colors"
          >
            Subscribe
          </button>
        </div>
      </form>
    </section>
  </main>
</MainLayout>
